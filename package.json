{
  "name": "corpus",
  "version": "0.0.9000-pre",
  "description": "A note-management application for macOS",
  "main": "dist/main/index.js",
  "repository": "https://github.com/wincent/corpus.git",
  "author": "Greg Hurrell <greg@hurrell.net>",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "electron": "5.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@types/react": "16.8.15",
    "@types/react-dom": "16.8.4",
    "prettier": "*",
    "typescript": "^3.4.5"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -r dist/*",
    "format": "prettier --write -- '*.{json,md}' 'src/**/*.{html,ts,tsx}'",
    "format:check": "prettier --list-different -- '*.{json,md}' 'src/**/*.{html,ts,tsx}'",
    "start": "electron .",
    "watch": "tsc --watch"
  }
}
