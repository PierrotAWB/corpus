{
  "parser": "babel-eslint",
  "rules": {
    // key: 0 = allow, 1 = warn, 2 = error
    "comma-dangle": [0, "always-multiline"],
    "strict": [2, "global"],
    "new-cap": [
      2,
      {
        "capIsNewExceptions": [
          "ImmutableList",
          "ImmutableMap",
          "ImmutableOrderedSet",
          "ImmutableRange"
        ]
      }
    ],
    "no-alert": [0],
    "no-underscore-dangle": [0],
    "no-use-before-define": [2, "nofunc"],
    "quotes": [1, "single", "avoid-escape"]
  }
}
