{
  "parser": "babel-eslint",
  "rules": {
    // key: 0 = allow, 1 = warn, 2 = error
    "comma-dangle": [0],
    "global-strict": [2, "always"],
    "new-cap": [
      2,
      {
        // for Immutable
        "capIsNewExceptions": [
          "List",
          "OrderedSet",
          "Range"
        ]
      }
    ],
    "no-alert": [0],
    "no-underscore-dangle": [0],
    "quotes": [1, "single", "avoid-escape"]
  }
}
